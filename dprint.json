{
  "incremental": true,
  "typescript": {
    
    "quoteStyle": "preferSingle",
    "bracePosition": "sameLine",
    "commentLine.forceSpaceAfterSlashes": true,
    "useTabs": false,
    "trailingCommas": "never",
    "arrowFunction.useParentheses": "preferNone",
    "arrowFunction.bracePosition": "sameLine",
    "functionExpression.spaceAfterFunctionKeyword": true,
    "indentWidth": 2,
    "semiColons": "asi",
    
    "importDeclaration.preferSingleLine": false,
    "importDeclaration.sortNamedImports": "maintain",
    "importDeclaration.preferHanging": true,
    "module.sortImportDeclarations": "maintain",
    "module.sortExportDeclarations": "maintain",
    "exportDeclaration.sortNamedExports": "maintain",

    "jsx.quoteStyle": "preferDouble",
    "lineWidth": 100,
    "interfaceDeclaration.bracePosition": "sameLine",
    "functionDeclaration.bracePosition": "sameLine",
    "conditionalType.preferSingleLine": true,
    "conditionalExpression.operatorPosition": "sameLine",
    "conditionalExpression.preferSingleLine": true,
    "parentheses.preferSingleLine": true,
    "useBraces": "whenNotSingleLine",
    "staticBlock.bracePosition": "sameLine",
    "typeParameters.trailingCommas": "always",
    "taggedTemplate.spaceBeforeLiteral": false,
    "arguments.preferSingleLine": false
  },
  "json": {
    "array.preferSingleLine": false,
    "useTabs": false
  },
  "markdown": {},
  "includes": [
    "**/*.{ts,tsx,toml}"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/*.d.ts",
    ".*/**/*",
    "**/*.typegen.ts",
    "extract",
    "reports"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.88.4.wasm",
    "https://plugins.dprint.dev/json-0.19.0.wasm",
    "https://plugins.dprint.dev/markdown-0.16.2.wasm"
  ]
}